<Window x:Class="BestAcademy.EditDialogs.LessonAddEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestAcademy.EditDialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Редактировать урок" Height="150" Width="250">
    <StackPanel>
        <TextBlock Text="День и время:" Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <ComboBox Name="DayCombo" Width="100" Margin="5"></ComboBox>
            <ComboBox Name="HourCombo" Width="52" Margin="5"></ComboBox>
            <ComboBox Name="MinuteCombo" Width="52" Margin="5"></ComboBox>
        </StackPanel>
        <Button Content="OK" Name="OK" Click="OK_Click" Margin="5" Height="25"/>
    </StackPanel>
</Window>
